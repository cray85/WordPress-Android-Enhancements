<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/wp_jetpack_powered"
    android:textAppearance="?attr/textAppearanceCaption"
    android:textColor="@color/white"
    android:textSize="13sp"
    app:chipBackgroundColor="@color/jetpack_green"
    app:chipCornerRadius="15dp"
    app:chipEndPadding="15dp"
    app:chipIcon="@drawable/ic_jetpack_logo_white_24dp"
    app:chipIconEnabled="true"
    app:chipIconSize="20dp"
    app:chipMinHeight="30dp"
    app:chipStartPadding="5dp"
    app:iconEndPadding="5dp"
    app:textEndPadding="0dp"
    app:textStartPadding="0dp" />
